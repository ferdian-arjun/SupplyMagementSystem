@{
    ViewBag.Title = "Project Menu";
    Layout = "_Layout";
}

<div class="container-fluid m-4">
    <h3>Project List</h3>

    <div class="card-box table-responsive">
        <button type="button" class="btn btn-success mb-3" data-toggle="modal" data-target="#modalCreate">Create Project</button>
        
        <div id="modalCreate" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Create new Project</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <form id="form-create-project" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputName">Project Name</label>
                                <input id="inputName" type="text" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageProjectName"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">Description</label>
                                <input id="inputDescription" type="text" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageDescription"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputStartDate">StartDate</label>
                                <input id="inputStartDate" type="date" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageStartDate"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEndDate">EndDate</label>
                                <input id="inputEndDate" type="date" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageEndDate"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Create Data</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <table id="datatable-project" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th width="1%">No</th>
                <th>Project</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Create Date</th>
                <th>Update Date</th>
                <th width="10%">Action</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="editLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLabel">Edit Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-edit-project" method="post">
                <input id="inputProjectGuidEdit" type="hidden"/>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputNameEdit">Project Name</label>
                        <input id="inputNameEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageProjectNameEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputDescriptionEdit">Description</label>
                        <input id="inputDescriptionEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageDescriptionEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputStartDateEdit">Start Date</label>
                        <input id="inputStartDateEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageStartDateEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEndDateEdit">End Date</label>
                        <input id="inputEndDateEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageEndDateEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputStatusEdit">Status</label>
                        <select id="inputStatusEdit" class="form-control">
                            <option value="0">On Plan</option>
                            <option value="1">On Progress</option>
                            <option value="2">Done</option>
                            <option value="3">Canceled</option>
                        </select>
                        <div class="invalid-feedback">
                            <span id="messageStatusEdit"></span>
                        </div>
                    </div>
                    
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalAddVendor" tabindex="-1" role="dialog" aria-labelledby="addVendor"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addVendor">Set Vendor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-add-vendor" method="post">
                <input id="inputProjectGuidAddVendor" type="hidden"/>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputNameAddVendor">Project Name</label>
                        <input id="inputNameAddVendor" type="text" class="form-control" value="" disabled="disabled">
                        <div class="invalid-feedback">
                            <span id="messageProjectNameAddVendor"></span>
                        </div>
                    </div>
                 
                    <div class="form-group">
                        <label for="inputVendorGuidAddVendor">Select Vendor</label>
                        <select id="inputVendorGuidAddVendor" class="form-control">
                        </select>
                        <div class="invalid-feedback">
                            <span id="messageVendorGuidAddVendor"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
