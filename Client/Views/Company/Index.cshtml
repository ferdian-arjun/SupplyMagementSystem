@{
    ViewBag.Title = "Company Menu";
    Layout = "_Layout";
}

<div class="container-fluid m-4">
    <h3>Company List</h3>
    <div class="card-box table-responsive">
        <button type="button" class="btn btn-success mb-3" data-toggle="modal" data-target="#modalCreate">Register Company</button>
        
        <div id="modalCreate" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Register Company data</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <form id="form-create-company" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="inputName">Name</label>
                                <input id="inputName" type="text" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageName"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input id="inputEmail" type="text" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageEmail"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputTelp">Telp</label>
                                <input id="inputTelp" type="text" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageTelp"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputImage">Image</label>
                                <input id="inputImage" type="text" class="form-control" value="">
                                <div class="invalid-feedback">
                                    <span id="messageImage"></span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Create Data</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <table id="datatable-company" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th width="1%">No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Telp</th>
                <th>Image</th>
                <th>Status</th>
                <th>Approve By</th>
                <th>Created Date</th>
                <th>Update Date</th>
                <th width="10%">Action</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="editLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLabel">Edit Company data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-edit-company" method="post">
                <input id="inputCompanyGuidEdit" type="hidden"/>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputNameEdit">Name</label>
                        <input id="inputNameEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageNameEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmailEdit">Email</label>
                        <input id="inputEmailEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageEmailEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputTelpEdit">Telp</label>
                        <input id="inputTelpEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageTelpEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputImageEdit">Image</label>
                        <input id="inputImageEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageImageEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputBusinessTypeEdit">BusinessType</label>
                        <input id="inputBusinessTypeEdit" type="text" class="form-control" value="" >
                        <div class="invalid-feedback">
                            <span id="messageBusinessTypeEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputTypeEdit">Type</label>
                        <input id="inputTypeEdit" type="text" class="form-control" value="" >
                        <div class="invalid-feedback">
                            <span id="messageTypeEdit"></span>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
